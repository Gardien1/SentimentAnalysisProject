<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1791be"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/title_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="82dp"
        android:text="Setup"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/title_twitterhandleinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_twitterhandleinput"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="44dp"
        android:text="Please enter in the twitter handles to monitor."
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/setup_data_ouput_layout"
        app:layout_constraintStart_toStartOf="@+id/setup_data_ouput_layout"
        app:layout_constraintTop_toBottomOf="@+id/title_setup" />

    <Button
        android:id="@+id/addHandle_btn"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:background="@android:color/holo_blue_light"
        android:text="Add More Accounts"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/save_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setup_data_ouput_layout" />

    <Button
        android:id="@+id/finishSetup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:background="#33b5e5"
        android:text="Finish"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBaseline_toBaselineOf="@+id/save_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/setup_data_ouput_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/addHandle_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_twitterhandleinput"></LinearLayout>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="3dp"
        android:text="Finish"
        android:textColor="@color/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/finishSetup_btn"
        app:layout_constraintTop_toBottomOf="@+id/addHandle_btn" />
</android.support.constraint.ConstraintLayout>